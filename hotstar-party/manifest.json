{
  "manifest_version": 3,
  "name": "Hotstar Watch Party",
  "version": "1.0",
  "description": "Sync Hotstar videos with friends.",
  "permissions": ["storage", "tabs", "activeTab", "webNavigation"],
  "background": {
    "service_worker": "background.js"
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://www.hotstar.com/*"],
      "js": ["content.js", "hotstar_sync_script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
